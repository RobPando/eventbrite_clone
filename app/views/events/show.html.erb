<% provide(:title, "Event") %>
<h1>Event Name: <%= @event.name %></h1>

<h2>Creator: <%= @event.creator.name.capitalize %></h2>
<h3>Desciption</h3>
<p><%= @event.description %></p>
<h3>Location</h3>
<p><%= @event.location %></p>
<h3>Date</h3>
<p><%= @event.date %></p>
<h3>Guests</h3>
<% if @guests.any? %>
  <ul>
    <% @guests.each do |guest| %>
    <li><%= guest.name %></li>
    <% end %>
  </ul>
<% else %>
  <p>No guests</p>
<% end %>