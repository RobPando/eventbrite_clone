<% provide(:title, @user.name.capitalize) %>
<center>
  <h1><%= @user.name.capitalize %>'s Profile</h1>
  <%= link_to content_tag(:i, 'add', class: 'material-icons'), new_event_path, class: 'btn-floating btn-large waves-effect waves-light red' %>
</center>
 <ul class="collection with-header">
  <li class="collection-header center"><h4>My Events</h4></li>
  <% if @user.created_events.any? %>
    <% @user.created_events.each do |event| %>
      <li class="collection-item"><%= link_to event.name, event_path(event) %></li>
    <% end %>
  <% else %>
  <li class="collection-item">No events found, add some!</li>
  <% end %>
</ul>


<h1 class="center">Attending</h1>

<%= render 'attending' %>
  